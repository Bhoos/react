{
  "name": "@bhoos/react-kit",
  "version": "2.0.15",
  "description": "Bhoos React Library Workspace",
  "private": "true",
  "workspaces": [
    "form",
    "locale",
    "modal",
    "router",
    "transition"
  ],
  "scripts": {
    "clean": "rimraf dist && rimraf es6",
    "build:cjs": "tsc",
    "build:es6": "mkdir -p es6 && echo '{\"type\":\"module\"}' > es6/package.json && tsc --module es6 --outDir es6",
    "build": "yarn build:cjs && yarn build:es6",
    "prepublishOnly": "yarn clean && yarn build",
    "postversion": "git push && git push --tags"
  },
  "repository": "git@github.com:bhoos/react-kit",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "author": "Ranjan Shrestha",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^17.0.19",
    "jest": "^26.6.3",
    "lerna": "^5.2.0",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  }
}
